# Maintainer: Keerthan Jaic <jckeerthan at gmail dot com>

pkgname=netflix-surf
pkgver=1
pkgrel=1
pkgdesc="A simple script to run netflix on surf using pipelight"
arch=('any')
license=('GPL')
depends=('pipelight' 'surf')
source=('netflix-surf.sh' 'netflix-surf.desktop' 'netflix-surf.png')

md5sums=('474946613b344eb0d8d714e4e9b3fc42'
         '312112f75317f9adc39854457e66aace'
         '5716377f415f256fc5f97a7d7d39862d')

package() {
  install -Dm755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 "$pkgname.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
